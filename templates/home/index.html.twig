{% extends 'layout.html.twig' %} {% block title %}{{ parent() }}Accueil{%
endblock %} {% block content %}

<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-dark">Bienvenue sur Boutique E-commerce!</h1>
  <div class="container-fluid">
    <div class="row">
      {% for produit in produit %}
      <div class="col col-md-3 mt-1">
        <div class="card" style="width: 100%">
          <div class="card-body">
            <h5 class="card-title">{{ produit.titre }}</h5>
            <img
              width="100%"
              src="{{ asset('uploads/' ~ produit.photo) }}"
              alt="{{ produit.titre }}"
            />
            <h6>{{ produit.titre }}</h6>
            <h6>Couleur : {{ produit.couleur }}</h6>
            <h6>Taille : {{ produit.taille }}</h6>
            <h6>Stock : {{ produit.stock }}</h6>
            <h6 class="text-danger">Prix : {{ produit.prix }} â‚¬</h6>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% endblock %}
